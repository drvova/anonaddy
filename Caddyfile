{
	admin off
	auto_https off
}

:8080 {
	root * /var/www/public
	encode zstd gzip

	header {
		X-Frame-Options "SAMEORIGIN"
		X-Content-Type-Options "nosniff"
	}

	@hidden_files {
		path */.*
		not path /.well-known/*
	}
	respond @hidden_files 403

	php_fastcgi 127.0.0.1:9000 {
		capture_stderr
	}
	file_server

	log {
		output stderr
		format console
	}
}
